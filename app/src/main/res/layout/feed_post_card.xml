<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    android:elevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Author's profile image and name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/authorImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/hasan"
                app:civ_border_color="@color/gray"
                app:civ_border_width="2dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    style="@style/TextAppearance.Body1"
                    android:id="@+id/authorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author Name"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    style="@style/TextAppearance.Body3"
                    android:id="@+id/timeStamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 hour ago"
                    android:textColor="@color/black"
                    android:textSize="11sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/autUSer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                style="@style/TextAppearance.Body3"
                android:textSize="11sp"
                android:text="User Name"
                />
        </LinearLayout>


        <!-- Post content: text and media (image or video) -->
        <TextView
            style="@style/TextAppearance.Body2"
            android:id="@+id/postTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Post content goes here..."
            android:maxLines="3"
            android:textSize="13sp"
            android:ellipsize="end"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/postMedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/posts_img_sample"
                android:scaleType="fitCenter"
                />
        </androidx.cardview.widget.CardView>


        <!-- Like, comment, and share buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Like button -->
            <ImageView
                android:id="@+id/likeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/Welcome"
                android:src="@drawable/post_like"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                style="@style/TextAppearance.Body3"
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="100"
                android:textStyle="bold"/>

            <!-- Comment button -->
            <ImageView
                android:id="@+id/commentIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/about_me"
                android:src="@drawable/post_comment"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                style="@style/TextAppearance.Body3"
                android:id="@+id/commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="50"
                android:textStyle="bold"/>

            <!-- Share button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                >

                <ImageView
                    android:id="@+id/savedIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/post_save"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
