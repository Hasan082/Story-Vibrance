<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!-- Base application theme -->
    <style name="Base.Theme.StoryVibrance" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Text appearance styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Headline3</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Body1</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Body2</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Body3</item>
    </style>

    <!-- Text appearance style for Toolbar title -->
    <style name="TextAppearance.Toolbar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_small</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Text appearance styles Heading 1 -->
    <style name="TextAppearance.Headline1" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_large</item>
        <item name="android:fontFamily">@font/lobster</item>

        <!-- Add more text attributes for Headline1 style -->
    </style>
    <!-- Text appearance styles Heading 2 -->
    <style name="TextAppearance.Headline2" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_stand</item>
        <!-- Add more text attributes for Headline2 style -->
    </style>
    <!-- Text appearance styles Heading 3 -->
    <style name="TextAppearance.Headline3" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_small</item>
        <item name="android:fontFamily">@font/lobster</item>
    </style>

    <!-- Text appearance styles Body 1-->
    <style name="TextAppearance.Body1" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/tx_sz_lg</item>
    </style>

    <!-- Text appearance styles Body 2-->
    <style name="TextAppearance.Body2" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/tx_sz_stand</item>
    </style>

    <!-- Text appearance styles Body 3-->
    <style name="TextAppearance.Body3" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/tx_sz_sm</item>
    </style>


    <!--    Button style-->
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/buttonstyle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tx_sz_sm</item>
        <item name="android:fontFamily">@font/inter_font</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btnHeight</item>
        <item name="android:maxWidth">@dimen/btnMaxWidth</item>
        <item name="android:minWidth">@dimen/btnMinWidth</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <!--EditText style-->
    <style name="AppEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btnHeight</item>
        <item name="android:background">@drawable/border_bottom</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/tx_sz_stand</item>
        <item name="android:fontFamily">@font/satoshi_body</item>
        <item name="android:drawablePadding">@dimen/padding_v_small</item>
    </style>


    <style name="Theme.StoryVibrance" parent="Base.Theme.StoryVibrance" />
</resources>
