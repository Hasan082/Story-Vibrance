<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <!-- Corner radius -->
            <corners android:radius="12dp" />
            <!-- Elevation -->
            <solid android:color="@android:color/white" />
            <padding
                android:left="5dp"
                android:top="8dp"
                android:right="5dp"
                android:bottom="8dp" />

        </shape>
    </item>

</selector>
